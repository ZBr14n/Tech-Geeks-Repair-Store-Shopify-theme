@import "_footer-style.css";

.contact-us-caption{
    margin: auto;
    width: 50%;


    .content-title{
        text-align: center;
    }
    .content p{
        font-size: 20px;
    }
}


.contact-form{
    margin: auto;
    
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;    
    width: 70%;
    
    input, textarea{
        margin-top: 6px;
        margin-bottom: 16px;

        font-size: 25px;
        font-family: 'Times New Roman';

        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;      

    }
}



.form-verify{
    font-size: 20px;
    // border-style: solid;
    border-color: rgb(32, 32, 173);
    border-width: 5px;
    background-color: rgb(142, 214, 9);
}